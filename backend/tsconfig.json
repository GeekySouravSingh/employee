{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src", // Adjust based on your project structure
    "paths": {
      "*": ["node_modules/*", "*"]
    }
  },
  "include": ["src/**/*"], // Adjust based on your source directory
  "exclude": ["node_modules", "**/*.spec.ts"]
}
